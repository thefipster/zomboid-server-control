@using System.Timers;
@using TheFipster.Zomboid.ServerControl.Data;
@using TheFipster.Zomboid.ServerControl.Services;

@inject IJSRuntime JsRuntime
@inject ModConfigService ModConfig
@inject ModStorageService ModStorage
@inject DockerInteropService DockerInterop

<div id="fip-controls">
    <h2>
        <i class="fa-solid fa-gamepad fa-xl"></i>
        Controls
    </h2>

    <button id="mods-save-btn" class="fip-button" @onclick="onSaveClickAsync">
        <i class="fa-solid fa-floppy-disk"></i>
        Save
    </button>

    <a id="mods-diff-btn" class="fip-button" href="/changes" >
        <i class="fa-solid fa-arrows-split-up-and-left"></i>
        Changes
    </a>

    <button id="mods-apply-btn" class="fip-button" @onclick="onApplyClick">
        <i class="fa-solid fa-hammer"></i>
        @btnText
    </button>
</div>

