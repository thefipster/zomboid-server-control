@using System.Timers;
@using TheFipster.Zomboid.ServerControl.Data;
@using TheFipster.Zomboid.ServerControl.Services;

@inject IJSRuntime JsRuntime
@inject ModConfigService ServerConfig
@inject DockerInteropService DockerInterop

<div id="fip-controls">
    <h2>
        <i class="fa-solid fa-server fa-xl"></i>
        Controls
    </h2>

    <button id="mod-diff-btn" class="fip-button" @onclick="onDiffClick">
        <i class="fa-solid fa-arrows-split-up-and-left"></i>
        Server Diff
    </button>

    <button id="restart-btn" class="fip-button" @onclick="onRestartClick">
        <i class="fa-solid fa-rotate"></i>
        @btnText
    </button>
</div>

